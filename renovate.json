{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "gitlabci": {
    "enabled": false
  },
  "dockerfile": {
    "enabled": false
  },
  "regexManagers": [
    {
      "fileMatch": ["^.gitlab-ci.yml"],
      "matchStrings": ["hadolint\\/hadolint:(?<currentValue>.+?)\\n"],
      "depNameTemplate": "hadolint/hadolint",
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": ["^.gitlab-ci.yml"],
      "matchStrings": ["gcr.io\\/kaniko-project\\/executor:(?<currentValue>.+?)\\n"],
      "depNameTemplate": "gcr.io/kaniko-project/executor",
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": ["^.gitlab-ci.yml"],
      "matchStrings": ["aquasec\\/trivy:(?<currentValue>.+?)\\n"],
      "depNameTemplate": "aquasec/trivy",
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": ["^.gitlab-ci.yml"],
      "matchStrings": ["debian:(?<currentValue>.+?)\\n"],
      "depNameTemplate": "debian",
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": ["^.gitlab-ci.yml"],
      "matchStrings": ["cytopia\\/ansible:(?<currentValue>.+?)\\n"],
      "depNameTemplate": "cytopia/ansible",
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": ["^.gitlab-ci.yml"],
      "matchStrings": ["haxorof\\/ansible-lint:(?<currentValue>.+?)\\n"],
      "depNameTemplate": "haxorof/ansible-lint",
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": ["^.gitlab-ci.yml"],
      "matchStrings": ["zricethezav\\/gitleaks:(?<currentValue>.+?)\\n"],
      "depNameTemplate": "zricethezav/gitleaks",
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": ["^.gitlab-ci.yml"],
      "matchStrings": ["IMAGE: docker:(?<currentValue>.+?)\\n"],
      "depNameTemplate": "docker",
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": ["^.gitlab-ci.yml"],
      "matchStrings": ["ANSIBLE_VERSION:\\s(?<currentValue>.+?)\\n"],
      "depNameTemplate": "debian_11/ansible",
      "datasourceTemplate": "repology",
      "versioningTemplate": "loose"
    }
  ]
}

