vault {
  address      = "http://{{ hcp_vault_address }}:8200"
  token        = "{{ consul_gossip_token }}"
  unwrap_token = false
  renew_token  = true
  namespace    = admin
}

template {
  source      = "/opt/consul/templates/gossip.key.tpl"
  destination = "/opt/consul/templates/gossip.key"
  perms       = 0700
  command     = "/opt/consul_rotate_key.sh"
}
